{% extends 'layout_user.html.twig' %}

{% block title %}{{ 'title.list_training_days'|trans }}i{% endblock %}

{% block content %}
    <h1>{{ 'title.list_training_days'|trans }}</h1>

    <table class="vitamins" width="50%" align="center" text-align="center">
        <thead>
        <tr>
            <th>{{  'table.training_day'|trans }}</th>
            <th>{{  'table.edit'|trans }}</th>
            <th>{{  'table.delete'|trans }}</th>

        </tr>
        </thead>

        {% for data in paginator.data %}
            <tr>
                <td>{{ data.Training_day_day_number}}</td>

                <td>
                    <a class="btn btn-default" href="{{ url('edit_training_day', {'id': data.Training_day_ID})}}" title=" {{ 'button.change'|trans }}}">
                        {{ 'button.change'|trans }}
                    </a>
                </td>

                <td>
                    <a class="btn btn-default" href="{{ url('delete_training_day', {'id': data.Training_day_ID})}}" title="   {{ 'button.delete'|trans }}">
                        {{ 'button.delete'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}

    </table>

    {% include 'default/_paginator.html.twig' with {
    paginator: paginator,
    route_name: 'show_all_training_day',
    } %}


{% endblock %}